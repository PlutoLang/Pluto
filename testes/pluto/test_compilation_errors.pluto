local assert = require("assert")

local function check(intended_error, bad_code)
	local _, fail = load(bad_code)
	assert.contains(intended_error, fail)
end

$define invalid_syntax = "invalid syntax"

-- Walrus
do
	check(invalid_syntax, 
	[[
	local tab = {a:=1, (||->do tab=1 end)()}
	]])

	check(invalid_syntax, 
	[[
	error(a:=1)
	]])
end

-- NoteSuggestion
do
	$define missing_table_delimiter = "delimited"

	check(missing_table_delimiter,
	[[
	local t = {
		a,
		b
		c,
	}
	]])

	check(missing_table_delimiter,
	[[
	local t = {
		a = 1,
		b = 2
		c = 3,
	}
	]])

	check(missing_table_delimiter,
	[[
	local t = {
		function a()

		end,

		function b()

		end

		function c()

		end
	}
	]])

	check(missing_table_delimiter,
	[[
	local t = {
		["a"] = 1,
		["b"] = 2
		["c"] = 3,
	}
	]])

	check(missing_table_delimiter,
	[[
	local t = {
		[a] = 1,
		[b] = 2
		[c] = 3
	}
	]])

	check(missing_table_delimiter,
	[[
	local t = {
		[a] = 1,
		[b] = 2,

		function a()

		end

		[c] = 3
	}
	]])

	check(missing_table_delimiter,
	[[
	local t = {
		[a] = 1,
		[b] = 2

		function a()

		end,

		[c] = 3
	}
	]])
end
